<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %> <%= locals.type %></title>
    <link rel="stylesheet" href="/styles/form.css">
</head>
<body>
    <%- include('partials/navbar'); %>
    <h1><%= locals.title %> <%= locals.type %></h1>
    <form action="<%= locals.route %>" enctype="multipart/form-data" method="post">
        <% if (locals.errors) { %>
            <ul>
                <% errors.forEach(err => { %>
                    <li><%= err.msg %></li>
                <% }); %>
            </ul>
        <% } %>
        <% if (title === "Add") { %>
            <div class="form-row">
                <label for="upload_file">Attach file:</label>
                <input type="file" name="upload_file" id="upload_file">
            </div>
            <button type="submit">Add</button>
        <% } else { %>
            <div class="form-row">
                <label for="<%= locals.type %>"><%= locals.type %></label>
                <input type="text" name="<%= locals.type %>" id="<%= locals.type %>">
            </div>
            <button type="submit">Update</button>
        <% } %>
    </form>
</body>
</html>